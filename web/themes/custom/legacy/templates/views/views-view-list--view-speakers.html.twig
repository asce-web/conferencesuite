{#
/**
 * @file
 * Theme override for a view template to display a list of rows.
 *
 * Available variables:
 * - attributes: HTML attributes for the container.
 * - rows: A list of rows for this list.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's contents.
 * - title: The title of this group of rows. May be empty.
 * - list: @todo.
 *   - type: Starting tag will be either a ul or ol.
 *   - attributes: HTML attributes for the list element.
 *
 * @see template_preprocess_views_view_list()
 */
#}
{% if attributes -%}
<div{{ attributes.addClass('c-Speakers__List') }}>
  {% endif %}

  <ol {{ list.attributes }}>{# BUG https://www.drupal.org/project/drupal/issues/2845400 #}

    {% for row in rows %}
      <li{{ row.attributes
        .addClass('c-Speaker')
        .setAttribute('itemprop'  , 'person')
        .setAttribute('itemscope' , '')
        .setAttribute('itemtype'  , 'http://schema.org/Person') }}>{{ row.content }}</li>
    {% endfor %}

  </ol>

  {% if attributes -%}
</div>
{% endif %}
