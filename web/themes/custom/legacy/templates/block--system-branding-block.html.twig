{% extends "block.html.twig" %}
{#
/**
 * @file
 * Default theme implementation for a branding block.
 *
 * Each branding element variable (logo, name, slogan) is only available if
 * enabled in the block configuration.
 *
 * Available variables:
 * - site_logo: Logo for site as defined in Appearance or theme settings.
 * - site_name: Name for site as defined in Site information settings.
 * - site_slogan: Slogan for site as defined in Site information settings.
 *
 * @ingroup themeable
 */
#}
{% block content %}
<a class="o-Flex__Item o-Flex o-Flex--siteHead o-MainCol" href="{{ path('<front>') }}" rel="home">
  {% if site_logo %}
    <div class="o-Flex__Item o-Flex__Item--siteLogo">
      <img class="c-ConfLogo" src="{{ site_logo }}" alt="Home"/>
    </div>
  {% endif %}
  {% if site_second_logo %}
    <div class="o-Flex__Item o-Flex__Item--siteLogo">
      <img class="c-ConfLogo" src="{{ site_second_logo }}" alt="Home"/>
    </div>
  {% endif %}
  <div class="o-Flex__Item o-Flex__Item--siteTitles c-ConferenceTitles -ta-l-sM">
    <h1 class="c-ConferenceTitles__Name">{{ block_current_name }}</h1>
    <p class="c-ConferenceTitles__Detail">
      {{ block_current_location_advisory }}
      |
      <time datetime="{{ block_current_startdate|date('c') }}">
        {{- block_current_startdate|date('M d') -}}
        {%- if block_current_startdate|date('Y') != block_current_enddate|date('Y') %}
          {{- block_current_startdate|date(', Y') -}}
        {% endif -%}
      </time>
      {{- '&ndash;' -}}
      <time datetime="{{ block_current_startdate|date('c') }}">
        {%- if block_current_startdate|date('M') != block_current_enddate|date('M') %}
          {{- block_current_enddate|date('M ') -}}
        {% endif -%}
        {{- block_current_enddate|date('d, Y') -}}
      </time>
    </p>
    {% if site_slogan %}
      <p class="c-ConferenceTitles__Tagline">{{ site_slogan }}</p>
    {% endif %}
  </div>
</a>
{% endblock %}
