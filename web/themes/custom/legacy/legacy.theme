function legacy_preprocess_page(&$variables) {
  $variables['page_current_name']              = theme_get_setting('conference_info_name');
  $variables['page_current_theme']             = theme_get_setting('conference_info_theme');
  $variables['page_current_startdate']         = theme_get_setting('conference_dates_start');
  $variables['page_current_enddate']           = theme_get_setting('conference_dates_end');
  $variables['page_current_location_display']  = theme_get_setting('conference_location_display');
  $variables['page_current_location_advisory'] = theme_get_setting('conference_location_advisory');
}

