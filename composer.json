{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/admin_toolbar": "^2.3",
        "drupal/authorization": "1.x-dev",
        "drupal/backup_migrate": "^4.0",
        "drupal/coffee": "^1.0@beta",
        "drupal/conditional_fields": "^4.0@alpha",
        "drupal/config_update": "^1.5",
        "drupal/console": "^1.0.2",
        "drupal/core": "^8.7.0",
        "drupal/ctools": "^3.0",
        "drupal/devel": "^2.0",
        "drupal/diff": "^1.0@RC",
        "drupal/editor_advanced_link": "^1.4",
        "drupal/editor_file": "^1.2",
        "drupal/entityqueue": "^1.0@alpha",
        "drupal/externalauth": "^1.1",
        "drupal/features": "^3.7",
        "drupal/google_tag": "^1.0",
        "drupal/imce": "^2.4",
        "drupal/ldap": "^4.3",
        "drupal/link_plain_text_formatter": "^1.0",
        "drupal/linkit": "^5.0@beta",
        "drupal/pathauto": "^1.2",
        "drupal/rebuild_cache_access": "^1.4",
        "drupal/scheduler": "^1.3",
        "drupal/token": "^1.1",
        "drupal/workbench": "^1.3",
        "drupal/workbench_moderation": "^1.6",
        "drush/drush": "^9.0.0",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "webflo/drupal-core-require-dev": "^8.7.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": [
            "load.environment.php"
        ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "patches": {
            "drupal/ldap": {
                "Authorization function declaration fixes": "https://www.drupal.org/files/issues/2021-02-04/ldap-authorization-3196664-2.patch"
            },
            "drupal/diff": {
                "Add table headers text": "patches/diff/diffTableHeaders.patch",
                "Update Navigation text": "patches/diff/navigationText.patch"
            }
        }
    }
}
